<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script>
    
    const valForm = (QIDP1, QIDP2) => {
        if ($(QIDP1).val() !== $(QIDP2).val()){
            $('#ERROR').css("display","block");
            $('#ERROR').html("Passwords does not match.");
            return false;
        }
    }
</script>
